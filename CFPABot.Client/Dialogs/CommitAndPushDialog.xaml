<ui:ContentDialog x:Class="CFPABot.Client.Dialogs.CommitAndPushDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CFPABot.Client.Dialogs"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"  FontFamily="Microsoft YaHei UI"
             d:DesignHeight="450" d:DesignWidth="800" CloseButtonText="取消" IsPrimaryButtonEnabled="True"  PrimaryButtonText="提交">
    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:CommitAndPushDialog}" />
    </ui:ContentDialog.Resources>
    <Grid>
        <StackPanel>
            <ui:TextBlock Margin="8" FontSize="16">更改的信息</ui:TextBlock>
            <ui:TextBox TextWrapping="Wrap" Width="300" Height="100" x:Name="CommitMessage"></ui:TextBox>

        </StackPanel>
    </Grid>
</ui:ContentDialog>
