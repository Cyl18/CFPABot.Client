<ui:FluentWindow x:Class="CFPABot.Client.StorageLocationWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:CFPABot.Client"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 mc:Ignorable="d" FontFamily="Microsoft YaHei UI"
                 Title="StorageLocationWindow" Height="240" Width="400">
    <Grid>
        <StackPanel>
            <ui:TitleBar Title=""/>

            <ui:TextBlock HorizontalAlignment="Center" FontSize="16" Margin="8">选择工作目录</ui:TextBlock>
            <ui:TextBlock FontSize="12" Margin="8">工作目录可能会占用 200M~1GB 存储空间</ui:TextBlock>
            <RadioButton Margin="8,4" IsChecked="True" x:Name="AppdataButton">Appdata（C盘）</RadioButton>
            <RadioButton Margin="8,4" IsChecked="False">当前目录</RadioButton>
                <ui:Button Margin="8" Click="Confirm">确认</ui:Button>
        </StackPanel>
    </Grid>
</ui:FluentWindow>
